{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Server",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "strict": false,
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2020"
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../packages/core"
    },
    {
      "path": "../../packages/crdt"
    }
  ]
}
